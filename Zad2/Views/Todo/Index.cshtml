
@model Zad2.Models.IndexViewModel
@{
    ViewData["Title"] = "Todo";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
</head>
<body>
<h1>Todo</h1>
     <br />
     <div>
         <a asp-controller="Todo" asp-action="Add">Add new todo</a> &nbsp &nbsp &nbsp 
         <a asp-controller="Todo" asp-action="Completed">See completed todos</a> <br /><br /><br />
    

         @if (Model.TodoItems.Count==0)
         {
             <b>No active todos!</b>
         }
         else
         {
             foreach (var todoItem in Model.TodoItems)
              {
                  Html.RenderPartial("~/Views/Todo/PartialView.cshtml", todoItem );
              }   
         }

     </div> 
</body>
</html>
